<div class="form-group">
	<label class="control-label" for="user_username">{{ 'users.username'|trans }}</label>
	<input type="text" id="user_username" name="username" required="required" ng-model="userCtrl.username" ng-disabled="userCtrl.isDisabled()" class="form-control" />
	<script type="text/javascript">
		document.getElementById('user_username').focus();
	</script>
</div>                    
<div class="form-group">
	<label class="control-label" for="user_email">{{ 'users.email'|trans }}</label>
	<input type="text" id="user_email" name="email" ng-model="userCtrl.email" ng-disabled="userCtrl.isDisabled()" class="form-control">
</div>
<div class="form-group">
	<label class="control-label" for="user_role">{{ 'users.role'|trans }}</label>
	<select id="user_role" name="role" required="required" ng-model="userCtrl.role" ng-disabled="userCtrl.isDisabled()" class="form-control">
		<option value="" disabled="disabled" selected="selected"></option>
		<option value="ROLE_USER">{{ 'users.roles.ROLE_USER'|trans }}</option>
		<option value="ROLE_ADMIN">{{ 'users.roles.ROLE_ADMIN'|trans }}</option>
	</select>
</div>
<div class="form-group hidden" ng-class="{showBlock: userCtrl.isAdmin()}">
	<label class="control-label" for="user_isReal"><input id="user_isReal" name="isReal" type="checkbox" ng-model="userCtrl.isReal"/> {{ 'users.isReal'|trans }}</label>
	
</div>
